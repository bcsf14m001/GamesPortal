@model  List<WebApplication3.Models.Game>
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <!-- Header -->
        <div id="header-wrapper" class="wrapper">
            <div id="header">

                <!-- Logo -->
                <div id="logo">
                    <h1><a href="index.html">Imag!ne</a></h1>
                    <p>Find the best games for your PC</p>
                </div>

                <!-- Nav -->
                @Html.Partial("_HomeNavPartial")

            </div>
        </div>

        <!-- Main -->
        <div class="wrapper style2">
            <div class="title" style="margin-left: 1%;width:55%;padding:1%">
                @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                {
                    <input type="text" placeholder="Title Name..." name="Search" style="width:75%;height:50px;float:left;padding: 5px;" />
                    <input type="submit" value="Search" style="height:50px;padding-bottom: 5px;margin-left: 5px;" />
                }
            </div>
            <div id="main" class="container">
               <div id="content">
                    <article class="box post">
                        <header class="style1">
                            @if (Session["search"] == null)
                            {
                                <h2>Popular Now</h2>
                            }
                            else
                            {
                                <h2>Search Results</h2>
                            }
                        </header>

                        @foreach (var x in Model)
                        {
                            <a href="/Home/AddToFavs?Gid=@x.Id">
                                <div class="sq" style="display: inline-block; float:none;">
                                    <img src="@x.Path" style="width:100%; height:75%" />
                                    <h1 style="text-align:center">@x.Name</h1>
                                    <h1 style="text-align:center">@x.Price</h1>
                                </div>
                            </a>
                        }
                    </article>

                </div>

            </div>
        </div>